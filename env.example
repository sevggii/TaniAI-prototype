API_KEY_RESEARCH=research_key_789
API_RATE_LIMIT_DEV=1000
API_RATE_LIMIT_HOSPITAL=5000
API_RATE_LIMIT_RESEARCH=10000

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000
